@inject IJSRuntime JS

<section id="arcade" class="py-24 bg-black relative">
    <div class="max-w-5xl mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-6xl font-bold mb-4 tracking-tighter uppercase italic scramble-on-hover">The Arcade</h2>
            <p class="text-gray-500 uppercase tracking-widest text-xs font-bold">Play small builds of my logic and engine experiments</p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
                <div id="game-container" class="scanline">
                    <div id="score">SCORE: 0</div>
                    <div id="player"></div>

                    <div id="game-over">
                        <h3 class="text-4xl font-bold text-red-500 mb-4">SYSTEM CRASHED</h3>
                        <p class="text-white mb-6 uppercase tracking-widest text-sm">Deployment Failed (Bug Detected)</p>
                        <button @onclick="StartGame" class="px-8 py-3 bg-blue-600 text-white font-bold rounded-lg uppercase text-xs tracking-widest hover:bg-blue-500">
                            Reboot System
                        </button>
                    </div>

                    <div id="game-start" class="absolute inset-0 bg-black/80 flex flex-col items-center justify-center z-30">
                        <div class="text-[#00d2ff] mb-6 text-center">
                            <i class="fas fa-terminal text-5xl mb-4"></i>
                            <h3 class="text-2xl font-bold uppercase tracking-tighter scramble-on-hover">PowerShell Runner</h3>
                            <p class="text-xs text-gray-400 uppercase tracking-widest mt-2">Spacebar to Jump over Bugs</p>
                        </div>

                        <button @onclick="StartGame" class="px-10 py-4 border-2 border-[#00d2ff] text-[#00d2ff] font-bold rounded-xl uppercase tracking-widest hover:bg-[#00d2ff] hover:text-black transition">
                            Load Engine
                        </button>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="glass p-6 rounded-2xl border-l-4 border-blue-400">
                    <h4 class="font-bold text-blue-400 uppercase text-xs tracking-widest mb-2">Currently Playing</h4>
                    <h3 class="text-xl font-bold mb-2 scramble-on-hover">PowerShell Dash</h3>
                    <p class="text-gray-400 text-sm">A custom JS engine experiment demonstrating jump mechanics and collision detection systems used in larger projects.</p>
                </div>

                <div class="glass p-6 rounded-2xl opacity-50 cursor-not-allowed">
                    <h4 class="font-bold text-gray-500 uppercase text-xs tracking-widest mb-2">Coming Soon</h4>
                    <h3 class="text-xl font-bold mb-2 italic scramble-on-hover">Unity WebGL Build</h3>
                    <p class="text-gray-500 text-sm">Full 3D implementation of a procedural dungeon crawler.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private Task StartGame() => JS.InvokeVoidAsync("ArmaYsm.startGameSafe").AsTask();
}
